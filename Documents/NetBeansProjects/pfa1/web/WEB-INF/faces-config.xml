<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
  <!--  <managed-bean>
        <managed-bean-name>UserController</managed-bean-name>
        <managed-bean-class>controller.UserController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>-->
    <navigation-rule>
        <from-view-id>/welcomePrimefaces.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>/accueilch</from-outcome>
            <to-view-id>/page1.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>/erreur</from-outcome>
            <to-view-id>/welcomePrimefaces.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>inscriptionController</managed-bean-name>
        <managed-bean-class>controller.InscriptionController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>inscriptionLaboController</managed-bean-name>
        <managed-bean-class>controller.InscriptionLaboController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/page1.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>profil</from-outcome>
            <to-view-id>/profilChercheur.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profilChercheur.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inscription</from-outcome>
            <to-view-id>/inscriptionLabo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>inscriptionLabo</from-outcome>
            <to-view-id>/inscriptionLabo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>redirectpub</from-outcome>
            <to-view-id>/listePublication.xhtml</to-view-id>
             <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>redirectmodifierprofil</from-outcome>
            <to-view-id>/modifierProfil.xhtml</to-view-id>
             <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/connexion.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>/erreur</from-outcome>
            <to-view-id>/connexion.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>compte</from-outcome>
            <to-view-id>/creationCompte.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>/accueilch</from-outcome>
            <to-view-id>/profilChercheur.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/creationCompte.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>succes</from-outcome>
            <to-view-id>/connexion.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>/accueilch</from-outcome>
            <to-view-id>/profilChercheur.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/modifierProfil.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>profil</from-outcome>
            <to-view-id>/profilChercheur.xhtml</to-view-id>
              <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/listePublication.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ajoutpub</from-outcome>
            <to-view-id>/NouvellePublication.xhtml</to-view-id>
               <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/NouvellePublication.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Succes</from-outcome>
            <to-view-id>/listePublication.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>redirectmodifierprofil</from-outcome>
            <to-view-id>/modifierProfil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
